<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?mmBackgroundColorPrimary">

    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/mm_dark_green"
        app:cardCornerRadius="4.0dip"
        android:layout_marginTop="@dimen/spacing_minor"
        android:layout_marginLeft="@dimen/spacing_minor"
        android:layout_marginRight="@dimen/spacing_minor">

        <RelativeLayout
            android:padding="12.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/empty_screen_icon"
                android:layout_width="96.0dip"
                android:layout_height="96.0dip"
                android:layout_centerHorizontal="true" />
            <TextView
                android:textSize="@dimen/abc_text_size_title_material"
                android:textColor="@android:color/white"
                android:id="@+id/empty_screen_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/empty_screen_icon" />
            <TextView
                android:textSize="@dimen/abc_text_size_subhead_material"
                android:textColor="@android:color/white"
                android:id="@+id/empty_screen_body"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/empty_screen_title" />
            <TextView
                android:id="@+id/empty_screen_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/empty_screen_body"
                style="@style/MMovies.Button.PrimaryDark"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>